<!DOCTYPE html>
<html>

<head>
  <meta charset="URF-8">
  <title>Regist New Post</title>
  <%- include("../../_share/stylesheets.ejs") %>
</head>

<body>
  <%- include("../../_share/navbar.ejs") %>
  <div class="container">
    <div class="page-header">
      <h1>新規記事登録</h1>
    </div>
    <form method="POST" action="/account/post/regist" class="form-horizontal">
      <%
        var errors = locals.errors || {};
        var original = locals.original || {};
      %>
      <% if (locals.errors) { %>
      <div class="alert alert-danger">
        <% for (var key in errors) { %>
        <div><i class="fa fa-exclamation-circle fa-fw mr-2"></i><%= errors[key] %></div>
        <% } %>
      </div>
      <% } %>
      <div class="form-group <% if (errors.url) { %>has-error<% } %>">
        <label for="url" class="col-sm-2 control-label">URL</label>
        <div class="col-sm-10">
          <input type="text" id="url" name="url" class="form-control" value="<%= original.url %>" />
        </div>
      </div>
      <div class="form-group <% if (errors.title) { %>has-error<% } %>">
        <label for="title" class="col-sm-2 control-label">タイトル</label>
        <div class="col-sm-10">
          <input type="text" id="title" name="title" class="form-control" value="<%= original.title %>" />
        </div>
      </div>
      <div class="form-group">
        <label for="content" class="col-sm-2 control-label">本文</label>
        <div class="col-sm-10">
          <textarea id="content" name="content" class="form-control" rows="6"><%= original.content %></textarea>
        </div>
      </div>
      <div class="form-group">
        <label for="keywords" class="col-sm-2 control-label">キーワード</label>
        <div class="col-sm-10">
          <input type="text" id="keywords" name="keywords" class="form-control" value="<%= original.keywords %>" />
        </div>
      </div>
      <div class="form-group">
        <label for="authors" class="col-sm-2 control-label">著者</label>
        <div class="col-sm-10">
          <input type="text" id="authors" name="authors" class="form-control" value="<%= original.authors %>" />            
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="送信" class="btn btn-primary"/>
        </div>
      </div>
    </form>
  </div>
</body>

</html>